{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "target": "es6",
        "lib": ["es6", "esnext", "es2015"],
        "noImplicitAny": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "files": ["src/index.ts"],
    "exclude": ["node_modules"]
}
